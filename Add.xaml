            <TextBox x:Name="Price" HorizontalAlignment="Left" Height="23" Margin="258,294,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="149"/>
            <Label Content="Тип:"  HorizontalAlignment="Left" Margin="10,264,0,0" VerticalAlignment="Top" Width="243"/>
            <TextBox x:Name="Type" HorizontalAlignment="Left" Height="22" Margin="10,295,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="149"/>
