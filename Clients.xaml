<Window x:Class="post.Clients"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:post"
        mc:Ignorable="d"
        Title="Clients" Height="450" Width="500" Background="DeepSkyBlue" Loaded="Window_Loaded">
    <Grid>
        <DataGrid AutoGenerateColumns="False" x:Name="clientsGrid" Background="SkyBlue" FontSize="18" FontStyle="Oblique" FontWeight="Bold" HorizontalGridLinesBrush="#FF080707" VerticalGridLinesBrush="#FF030303" Margin="0,-3,0,10" HorizontalAlignment="Center" Width="496" RenderTransformOrigin="1.802,0.422" >
            <DataGrid.Columns>

                <DataGridTextColumn Binding="{Binding Name}" Header="Клиенты" Width="450" />

            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Window>
